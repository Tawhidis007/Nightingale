<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="30dp"
    android:background="#424856"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="start"
        android:layout_weight=".10"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/back_from_register_2_button"
            android:src="@drawable/ic_keyboard_backspace_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_weight=".90"
        android:layout_height="0dp">

        <LinearLayout
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="12dp"
                android:textSize="36sp"
                android:textColor="#fffbfa"
                android:text="New \nAccount"
                android:textAlignment="viewStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:textSize="20sp"
                android:textColor="#fffbfa"
                android:text="2/2 \nSteps"
                android:textAlignment="viewEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/register_upload_pix"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/upload"
                app:civ_border_color="#CB313131"
                app:civ_border_width="0dp" />

            <TextView
                android:paddingLeft="6dp"
                android:layout_gravity="center"
                android:textSize="18sp"
                android:textColor="#81858e"
                android:text="Upload a profile picture \n(optional)"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>


        <EditText
            android:drawablePadding="12dp"
            android:drawableLeft="@drawable/ic_perm_identity_black_24dp"
            android:backgroundTint="#b9975a"
            android:textColor="#b9975a"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="6dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:textColorHint="#81858e"
            android:hint="Enter Your Name"
            android:id="@+id/register_name_editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:drawablePadding="12dp"
                android:drawableLeft="@drawable/ic_more_black_24dp"
                android:backgroundTint="#b9975a"
                android:textColor="#b9975a"
                android:layout_marginBottom="12dp"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:textColorHint="#81858e"
                android:hint="A Bit About Yourself"
                android:id="@+id/register_about_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



        </ScrollView>


        <Button
            android:layout_marginTop="12dp"
            android:textColor="#fffbfa"
            android:background="@drawable/login_reg_button"
            android:layout_gravity="center"
            android:text="Submit"
            android:id="@+id/register_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</LinearLayout>