<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="30dp"
    android:layout_margin="12dp"
    app:cardElevation="8dp"
    android:orientation="vertical">

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_weight=".5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/post_image"
                android:scaleType="centerCrop"
                android:src="@drawable/demo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>



        </LinearLayout>

        <LinearLayout
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:layout_weight=".24"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/post_title"
                android:textColor="#231e18"
                android:textSize="24sp"
                android:text="Photo Title"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:id="@+id/post_author"
                android:textColor="#8B8888"
                android:textSize="16sp"
                android:text="Author Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/post_date"
                android:textSize="12sp"
                android:text="Date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:orientation="vertical"
            android:layout_weight=".26"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <TextView
                android:id="@+id/post_desc"
                android:textColor="#7c7b79"
                android:textSize="17sp"
                android:text="Description about the art"
                android:layout_width="match_parent"
                android:layout_height="24dp"/>
            <Button
                android:id="@+id/post_save_button"
                android:layout_marginTop="12dp"
                android:background="@drawable/card_button"
                android:text="View"
                android:textColor="#ECE9E9"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>